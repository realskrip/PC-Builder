@model PC_Builder.ViewModels.IndexViewModel

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <link rel="stylesheet" href="/css/StyleIndex.css">
        <title>PC Builder</title>
    </head>
    <body>
        <div class="sidebar">
            <a asp-controller="Home" asp-action="Index">На главную</a><br/> <!--return null-->
            <a asp-controller="Home" asp-action="Index" asp-route-category="cpu">Процессор</a><br/>
            <a asp-controller="Home" asp-action="Index" asp-route-category="cooling">Охлаждение</a><br/>
            <a asp-controller="Home" asp-action="Index" asp-route-category="motherboard">Материнская плата</a><br/>
            <a asp-controller="Home" asp-action="Index" asp-route-category="ram">Оперативная память</a><br/>
            <a asp-controller="Home" asp-action="Index" asp-route-category="gpu">Видеокарта</a><br/>
            <a asp-controller="Home" asp-action="Index" asp-route-category="datastorage">Хранилище данных</a><br/>
            <a asp-controller="Home" asp-action="Index" asp-route-category="case">Корпус</a><br/>
            <a asp-controller="Home" asp-action="Index" asp-route-category="powersupply">Блок питания</a><br/>
        </div>

        <div class="container">
            <form asp-controller="Home" asp-action="AddBasket">
                @foreach (var item in Model.CPUs)
                {
                    <p><input type="radio" name="product" value="@item.Name"> @item.Name @item.Price руб.</p>
                    <input type="hidden" name="category" value="@item.Category"/>
                }

                @foreach (var item in Model.Coolings)
                {
                    <p><input type="radio" name="product">@item.Name @item.Price руб.</p>
                }

                @foreach (var item in Model.Motherboards)
                {
                    <p><input type="radio" name="product">@item.Name @item.Price руб.</p>
                }

                @foreach (var item in Model.RAMs)
                {
                    <p><input type="radio" name="product">@item.Name @item.Price руб.</p>
                }

                @foreach (var item in Model.GPUs)
                {
                    <p><input type="radio" name="product">@item.Name @item.Price руб.</p>
                }

                @foreach (var item in Model.DataStorages)
                {
                    <p><input type="radio" name="product">@item.Name @item.Price руб.</p>
                }

                @foreach (var item in Model.Cases)
                {
                    <p><input type="radio" name="product">@item.Name @item.Price руб.</p>
                }

                @foreach (var item in Model.PowerSupplies)
                {
                    <p><input type="radio" name="product">@item.Name @item.Price руб.</p>
                }
                <input type="submit" value="Добавить в корзину"/>
            </form>
        </div>
    </body>
</html>