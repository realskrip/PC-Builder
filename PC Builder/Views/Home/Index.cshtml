@model PC_Builder.ViewModels.IndexViewModel

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <link rel="stylesheet" href="/css/StyleIndex.css">
        <title>PC Builder</title>
    </head>
    <body>
        <div class="sidebar">
            <a asp-controller="Home" asp-action="Index" asp-route-category="0">Все товары</a>
            <a asp-controller="Home" asp-action="Index" asp-route-category="cpu">Процессоры</a>
            <a asp-controller="Home" asp-action="Index" asp-route-category="cooling">Охлаждение</a>
        </div>

        <div class="container">
            @foreach (var item in Model.CPUs)
            {
                <p>@item.Name</p>
            }

            @foreach (var item in Model.Coolings)
            {
                <p>@item.Name</p>
            }
        </div>
    </body>
</html>