@{
    Layout = null;
}

@model PC_Builder.Models.User

<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8' />
    <title>PC Builder</title>

    <link rel="stylesheet" href="/css/Login.css">

    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@500&display=swap">
</head>
<body>
    <div class="login">
        <p class="header">Придумайте логин и пароль</p>
        <form asp-controller="Account" asp-action="Registration">
            <p>
                <label asp-for="Login">Логин</label><br />
                <input type="text" asp-for="Login"/>
            </p>
            <p>
                <label asp-for="Password">Пароль</label><br />
                <input type='password' asp-for="Password"/>
            </p>
            <p class="validationmessage">
                <span asp-validation-for="Login"></span>
            </p>
            <p class="validationmessage">
                <span asp-validation-for="Password"></span>
            </p>
            <input class="button" type='submit' value='Зарегистрироваться' />
        </form>
    </div>
</body>
</html>